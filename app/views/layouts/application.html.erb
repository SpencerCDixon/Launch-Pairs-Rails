<!DOCTYPE html>
<html>
<head>
  <% if content_for?(:title) %>
    <title><%= yield :title %></title>
  <% else %>
    <title>Launch Pairs</title>
  <% end -%>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="top-bar">
    <ul class="title-area">
      <li class="name">
        <a href="/"><div id="logo"></div></a>
      </li>
    </ul>

    <section class="top-bar-section">
      <ul class="right">
        <%- if current_user -%>
          <li><%= link_to 'Dashboard', dashboard_path %></li>
          <li><%= link_to 'Profile', user_profile_path(current_user) %></li>
          <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
        <%- else -%>
          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
          <li><%= link_to 'Sign In', new_user_session_path %></li>
        <%- end -%>
      </ul>
    </section>
  </nav>

  <div class="row">
    <%- flash.each do |key, value| -%>
      <% if key == "notice" %>
        <div class="alert-box info">
          <%= value %>
        </div>
      <% else %>
        <div class="alert-box <%= key %>">
          <%= value %>
        </div>
      <% end -%>
    <%- end -%>

    <%= yield %>
  </div>

  <footer id="footer">
    <div class="row">
      <div class="large-8 columns">
        <ul class="footer-nav">
          <li><a href="#" target="_blank">Submit Issues & Bugs</a></li>
          <li><a href="#" target="_blank">Contribute </a></li>
          <li><a href="#" target="_blank">Request Features</a></li>
        </ul>
      </div>
      <div class="large-4 columns">
        <p id="copyright"> &copy; Copyright <%= Time.now.year %></p>
        <%= image_tag ('la-logo.png'), class: "footer-logo" %>
      </div>
    </div>
  </footer>

  <%= javascript_include_tag 'application' %>
  <%= javascript_tag do %>
    $(function(){
      $(document).foundation();
    });
  <% end %>
  <%= yield :extra_footer %>
</body>
</html>
